{
  "name": "@belsar-ai/joplin-mcp",
  "version": "0.2.2",
  "type": "module",
  "description": "Model Context Protocol (MCP) server for Joplin note-taking app",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "joplin-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "scripts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "prepare": "npm run build",
    "postinstall": "./scripts/setup-husky.sh",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "lint:fix": "eslint . --fix",
    "lint:ci": "eslint . --max-warnings 0",
    "prepublishOnly": "npm run build && npm test",
    "release:patch": "npm version patch -m 'Release %s'",
    "release:minor": "npm version minor -m 'Release %s'",
    "release:major": "npm version major -m 'Release %s'",
    "release:beta": "npm version prerelease --preid=beta -m 'Release %s'"
  },
  "keywords": [
    "mcp",
    "joplin",
    "notes",
    "model-context-protocol",
    "ai",
    "llm"
  ],
  "author": "Kyle Lyon",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/belsar-ai/joplin-mcp.git"
  },
  "homepage": "https://github.com/belsar-ai/joplin-mcp#readme",
  "bugs": {
    "url": "https://github.com/belsar-ai/joplin-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "form-data": "^4.0.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/form-data": "^2.2.1",
    "@types/node": "^22.0.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.5.3",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.30.1",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
